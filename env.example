# ============================================================================
# WeatherFlow Analytics - Environment Configuration
# ============================================================================
# Copy this file to .env and update with your actual values

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
POSTGRES_DB=weather_analytics
POSTGRES_USER=weatherflow
POSTGRES_PASSWORD=secure_password_2024

# ============================================================================
# KAFKA CONFIGURATION
# ============================================================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_WEATHER_DATA=weather_raw_data
KAFKA_TOPIC_PROCESSED_DATA=weather_processed_data
KAFKA_TOPIC_FORECASTS=weather_forecasts
KAFKA_TOPIC_ALERTS=weather_alerts

# ============================================================================
# WEATHER API CONFIGURATION
# ============================================================================
# Get your API key from: https://www.weatherapi.com/
WEATHER_API_KEY=your_weatherapi_key_here
WEATHER_API_BASE_URL=https://api.weatherapi.com/v1

# Alternative weather APIs (for redundancy)
OPENWEATHER_API_KEY=your_openweather_api_key_here
ACCUWEATHER_API_KEY=your_accuweather_api_key_here

# ============================================================================
# MACHINE LEARNING CONFIGURATION
# ============================================================================
MODEL_RETRAIN_INTERVAL=24h
FORECAST_HORIZON=120  # 5 days in hours
MODEL_CONFIDENCE_THRESHOLD=0.8
SARIMA_ORDER=(1,1,1)
SARIMA_SEASONAL_ORDER=(1,1,1,24)

# ============================================================================
# AIRFLOW CONFIGURATION
# ============================================================================
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
AIRFLOW_FERNET_KEY=your_fernet_key_here
AIRFLOW_SECRET_KEY=your_secret_key_here
AIRFLOW_USERNAME=admin
AIRFLOW_PASSWORD=admin123

# ============================================================================
# API CONFIGURATION
# ============================================================================
API_SECRET_KEY=your_api_secret_key_here
API_RATE_LIMIT=1000  # requests per hour
API_CORS_ORIGINS=http://localhost:8501,http://localhost:3000

# ============================================================================
# MONITORING CONFIGURATION
# ============================================================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123
PROMETHEUS_RETENTION_DAYS=30

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=/app/logs/weatherflow.log

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
ENABLE_SSL=false
SSL_CERT_PATH=/etc/ssl/certs/weatherflow.crt
SSL_KEY_PATH=/etc/ssl/private/weatherflow.key

# ============================================================================
# PERFORMANCE CONFIGURATION
# ============================================================================
SPARK_WORKER_MEMORY=1g
SPARK_WORKER_CORES=1
KAFKA_PARTITIONS=3
KAFKA_REPLICATION_FACTOR=1

# ============================================================================
# DATA PROCESSING CONFIGURATION
# ============================================================================
DATA_BATCH_SIZE=1000
PROCESSING_INTERVAL=300  # 5 minutes
DATA_RETENTION_DAYS=90
BACKUP_INTERVAL=24h

# ============================================================================
# NOTIFICATION CONFIGURATION
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ALERT_EMAIL_RECIPIENTS=admin@weatherflow.com

# ============================================================================
# DEVELOPMENT CONFIGURATION
# ============================================================================
DEBUG=false
ENVIRONMENT=production
ENABLE_HOT_RELOAD=false
TESTING=false

# ============================================================================
# EXTERNAL SERVICES (Optional)
# ============================================================================
# Redis for caching (optional)
REDIS_URL=redis://localhost:6379

# Elasticsearch for log aggregation (optional)
ELASTICSEARCH_URL=http://localhost:9200

# MinIO for object storage (optional)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
MINIO_BUCKET=weatherflow-data
